<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/linearlayout_water_selector"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/project_list_recycler_view_imageview"
            android:layout_width="90dp"
            android:layout_height="150dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/project_list_recycler_view_textview1"
            android:layout_width="wrap_content"
            android:typeface="sans"
            android:layout_weight="1"
            android:textColor="@color/zi"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1.2"
            >
            <TextView
                android:id="@+id/project_list_recycler_view_textview2"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_weight="0.8"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/project_list_recycler_view_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_700" />

            <TextView
                android:id="@+id/project_list_recycler_view_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:textColor="@color/teal_700" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>