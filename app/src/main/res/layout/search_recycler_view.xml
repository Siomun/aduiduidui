<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/linearlayout_water_selector"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/search_recycler_view_test_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="5bhfzd "
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textColor="@color/teal_700"
            />
        <TextView
            android:id="@+id/search_recycler_view_test_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginTop="5dp"
            android:text="555555"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/teal_700"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/search_recycler_view_test_view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:typeface="sans"
        android:textColor="@color/zi"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/search_recycler_view_test_view4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:textSize="15sp"
        />
</LinearLayout>